    SET(OUTPUT_VAL ${${PROJECT_NAME}_ENABLE_SECONDARY_TESTED_CODE})
  ELSE()
    SET(OUTPUT_VAL ON)
  ENDIF()
  SET(${OUTPUT_VAR} ${OUTPUT_VAL} PARENT_SCOPE)
ENDFUNCTION()


