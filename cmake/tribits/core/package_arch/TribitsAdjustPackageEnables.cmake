  FOREACH(ENTITY ${${LISTVAR}})
    SET(ENTITY_NAME ${ENABLED_PREFIX}_ENABLE_${ENTITY})
    ASSERT_DEFINED(${ENTITY_NAME})
    SET(INCLUDE_ENTITY FALSE)
    IF (${ENTITY_NAME})
      LIST(APPEND  ENABLED_LIST_OUT  ${ENTITY})
    ENDIF()
  ENDFOREACH()
  LIST(LENGTH  ENABLED_LIST_OUT  NUM_ENABLED_OUT)
